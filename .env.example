PROWLARR_API_KEY="" # API key provided by the Prowlarr web interface post-deployment.
RADARR_API_KEY=""   # API key provided by the Radarr web interface post-deployment.
READARR_API_KEY=""  # API key provided by the Readarr web interface post-deployment.
SONARR_API_KEY=""   # API key provided by the Sonarr web interface post-deployment.

